{
  "name": "node-git-versioning",
  "version": "0.1.0",
  "description": "Version a Release or Release Candidate of an HMRC project",
  "homepage": "http://github.com/hmrc/node-git-versioning",
  "repository": {
    "type": "git",
    "url": "git://github.com/hmrc/node-git-versioning.git"
  },
  "main": "dist/index.js",
  "author": {
    "name": "HM Revenue & Customs",
    "url": "http://hmrc.gov.uk"
  },
  "contributors": [
    {
      "name": "Rory Powis",
      "email": "rory.powis@digital.hmrc.gov.uk"
    }
  ],
  "license": "Apache-2.0",
  "keywords": [
    "git",
    "version",
    "versioning",
    "HMRC"
  ],
  "engines": {
    "node": "4.4.5",
    "npm": ">= 2.15.5"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.4.0"
  },
  "devDependencies": {
    "babel-tape-runner": "^1.1.0",
    "chokidar-cli": "^1.0.1",
    "faucet": "0.0.1",
    "standard": "^10.0.2",
    "tape": "^4.0.1"
  },
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "npm run lint && babel index.js -o dist/index.js",
    "lint": "standard",
    "test": "npm run lint && babel-tape-runner test.js | faucet",
    "test:watch": "npm test; chokidar '**/*.js' -i 'node_modules' -c 'npm test'",
    "postinstall": "npm run build"
  }
}
